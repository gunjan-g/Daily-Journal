<%- include("partials/header"); -%>

  <div class="box" id="heading">
    <h1>To-Do List</h1>
  </div>

  <div class="box">
    <% for (let i=0; i<newListItems.length; i++) { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checked" value="<%= newListItems[i]._id %>" onChange="this.form.submit()">
          <p style="padding: 20px; font-size: 20px; font-weight: 200; color: #00204a;"><%=  newListItems[i].name  %></p>
        </div>
      </form>
      <% } %>

      <form class="item" action="/todolist" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" style="min-height: 50px; width: 50px; border-radius: 50%; border-color: transparent; background-color: #F2789F; color: #fff; font-size: 30px; padding-bottom: 6px; border-width: 0;" name="list">+</button>
      </form>
  </div>

  <%- include("partials/footer"); -%>
